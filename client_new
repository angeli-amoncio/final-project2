// tongits_client.cpp

#include <iostream>
#include <unistd.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <string.h>

using namespace std;

#define SERVER_IP "10.0.2.15"  // ðŸ‘ˆ Update this to your actual server VM IP
#define SERVER_PORT 9000

int main()
{
    int sock = 0;
    struct sockaddr_in serv_addr;
    char buffer[1024] = {0};

    cout << "==============================================" << endl;
    cout << "=              TONG-ITS TAGISAN              =" << endl;
    cout << "==============================================" << endl;
    cout << "Enter your player name: ";

    string playerName;
    getline(cin, playerName);

    sock = socket(AF_INET, SOCK_STREAM, 0);
    serv_addr.sin_family = AF_INET;
    serv_addr.sin_port = htons(SERVER_PORT);
    inet_pton(AF_INET, SERVER_IP, &serv_addr.sin_addr);

    if (connect(sock, (struct sockaddr*)&serv_addr, sizeof(serv_addr)) < 0)
    {
        perror("Connection Failed");
        return -1;
    }

    send(sock, playerName.c_str(), playerName.size(), 0);

    while (true)
    {
        int valread = read(sock, buffer, 1024);
        if (valread <= 0) break;

        buffer[valread] = '\0';
        cout << buffer << flush;

        // If it's a prompt to respond
        if (strstr(buffer, "press ENTER") != nullptr || strstr(buffer, "Type") != nullptr)
        {
            string input;
            getline(cin, input);
            send(sock, input.c_str(), input.size(), 0);
        }
    }

    close(sock);
    return 0;
}
