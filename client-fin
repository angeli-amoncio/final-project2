#include <iostream>
#include <unistd.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <string.h>
#include <cerrno>
#include <string>

using namespace std;

#define SERVER_IP "192.168.1.23"  // Replace with your VM1 IP
#define SERVER_PORT 9000
#define BUFFER_SIZE 1024

int main() {
    int sock = 0;
    struct sockaddr_in serv_addr;
    char buffer[BUFFER_SIZE] = {0};

    cout << "==============================================" << endl;
    cout << "=              TONG-ITS TAGISAN              =" << endl;
    cout << "==============================================" << endl;
    cout << "Enter your player name: ";
    
    string playerName;
    getline(cin, playerName);

    sock = socket(AF_INET, SOCK_STREAM, 0);
    if (sock < 0) {
        cerr << "Socket creation error: " << strerror(errno) << endl;
        return -1;
    }

    serv_addr.sin_family = AF_INET;
    serv_addr.sin_port = htons(SERVER_PORT);
    
    if (inet_pton(AF_INET, SERVER_IP, &serv_addr.sin_addr) <= 0) {
        cerr << "Invalid address/Address not supported: " << strerror(errno) << endl;
        close(sock);
        return -1;
    }

    if (connect(sock, (struct sockaddr*)&serv_addr, sizeof(serv_addr)) < 0) {
        cerr << "Connection Failed: " << strerror(errno) << endl;
        close(sock);
        return -1;
    }

    if (send(sock, playerName.c_str(), playerName.size(), 0) < 0) {
        cerr << "Send failed: " << strerror(errno) << endl;
        close(sock);
        return -1;
    }

    while (true) {
        memset(buffer, 0, BUFFER_SIZE);
        int valread = read(sock, buffer, BUFFER_SIZE-1);
        
        if (valread <= 0) {
            if (valread == 0) {
                cout << "Server disconnected" << endl;
            } else {
                cerr << "Read error: " << strerror(errno) << endl;
            }
            break;
        }
        
        cout.write(buffer, valread);
        
        // Check if server is asking for input
        if (strstr(buffer, "Select a card to play") != nullptr) {
            string input;
            getline(cin, input);
            
            if (send(sock, input.c_str(), input.size(), 0) < 0) {
                cerr << "Send failed: " << strerror(errno) << endl;
                break;
            }
        }
    }

    close(sock);
    return 0;
}
